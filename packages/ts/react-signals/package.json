{
  "name": "@vaadin/hilla-react-signals",
  "version": "24.4.0-alpha22",
  "description": "Signals for Hilla React",
  "main": "index.js",
  "module": "index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/vaadin/hilla.git",
    "directory": "packages/ts/react-signals"
  },
  "keywords": [
    "Hilla",
    "Signals",
    "React"
  ],
  "scripts": {
    "clean:build": "rimraf *.{d.ts.map,d.ts,js.map,js}",
