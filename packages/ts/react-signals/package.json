  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@preact/signals-react": "^2.0.0"
  },
  "peerDependencies": {
    "react": "^18",
    "react-router-dom": "^6"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@types/react": "^18.2.23",
