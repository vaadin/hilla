{
  "name": "@hilla/frontend",
  "version": "2.1.0-alpha3",
  "description": "Hilla frontend utils",
  "main": "index.js",
  "module": "index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/vaadin/hilla.git",
    "directory": "packages/ts/hilla-frontend"
  },
  "keywords": [
    "Hilla"
  ],
  "scripts": {
    "build": "tsc --isolatedModules -p tsconfig.build.json",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "test": "karma start ../../../karma.config.cjs --port 9878",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "typecheck": "tsc --noEmit",
    "version": "node ../../../scripts/bump/package-update.js"
  },
  "exports": {
    ".": {
      "default": "./index.js"
    },
    "./Authentication.js": {
      "default": "./Authentication.js"
    },
    "./Connect.js": {
      "default": "./Connect.js"
    },
    "./index.js": {
      "default": "./index.js"
    }
  },
  "author": "Vaadin Ltd",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/vaadin/hilla/issues"
  },
  "homepage": "https://hilla.dev",
  "files": [
    "*.{d.ts.map,d.ts,js.map,js}"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@vaadin/common-frontend": "^0.0.12",
    "a-atmosphere-javascript": "3.1.3-2",
    "js-cookie": "^3.0.1",
    "rimraf": "^3.0.2"
  },
  "peerDependencies": {
    "lit": "^2.3.0"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "^2.5.33",
    "@types/chai": "^4.2.21",
    "@types/js-cookie": "^3.0.3",
    "@types/mocha": "^9.0.0",
    "@types/sinon": "^10.0.2",
    "@types/sinon-chai": "^3.2.5",
    "@types/validator": "^13.6.3",
    "chai-dom": "^1.11.0",
    "fetch-mock": "^9.11.0",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "typescript": "^5.0.1-rc"
  }
}
