{
  "name": "@hilla/generator-typescript-core",
  "version": "1.2.1",
  "description": "A Hilla tool to generate TypeScript code from the OpenAPI document",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">= 16.13"
  },
  "scripts": {
    "clean:build": "rimraf *.{d.ts.map,d.ts,js.map,js}",
    "build": "concurrently npm:build:*",
    "build:transpile": "tsc --isolatedModules",
    "build:copy": "cd src && copyfiles **/*.d.ts ..",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "test": "mocha test/**/*.spec.ts --config ../../../.mocharc.cjs",
    "test:coverage": "c8 -c ../../../.c8rc.json npm test",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "default": "./index.js"
    },
    "./Generator.js": {
      "default": "./Generator.js"
    },
    "./GeneratorException.js": {
      "default": "./GeneratorException.js"
    },
    "./index.js": {
      "default": "./index.js"
    },
    "./Plugin.js": {
      "default": "./Plugin.js"
    },
    "./Schema.js": {
      "default": "./Schema.js"
    },
    "./utils.js": {
      "default": "./utils.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vaadin/hilla.git",
    "directory": "packages/ts/generator-typescript-core"
  },
  "keywords": [
    "hilla",
    "typescript",
    "generator"
  ],
  "author": "Vaadin Ltd.",
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/vaadin/hilla/issues"
  },
  "homepage": "https://hilla.dev",
  "files": [
    "*.{d.ts.map,d.ts,js.map,js}"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.0.3",
    "@hilla/generator-typescript-utils": "^1.2.1",
    "meow": "^10.1.1",
    "openapi-types": "^9.3.0",
    "typescript": "^4.5.0-beta"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.1",
    "@types/sinon": "^10.0.6",
    "@types/sinon-chai": "^3.2.5",
    "c8": "^7.10.0",
    "chai": "^4.3.4",
    "concurrently": "^6.3.0",
    "copyfiles": "^2.4.1",
    "mocha": "^9.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "type-fest": "^2.5.1"
  }
}
