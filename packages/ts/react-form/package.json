{
  "name": "@vaadin/hilla-react-form",
  "version": "24.7.0-alpha3",
  "description": "Hilla form utils for React",
  "main": "index.js",
  "module": "index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/vaadin/hilla.git",
    "directory": "packages/ts/react-form"
  },
  "keywords": [
    "Hilla",
    "Form",
    "React"
  ],
  "scripts": {
    "clean:build": "git clean -fx . -e .vite -e node_modules",
    "build": "concurrently npm:build:*",
    "build:esbuild": "tsx ../../../scripts/build.ts",
    "build:dts": "tsc --isolatedModules -p tsconfig.build.json",
    "build:copy": "cd src && copyfiles **/*.d.ts ..",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "test": "karma start ../../../karma.config.cjs --port 9874",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "default": "./index.js"
    }
  },
  "author": "Vaadin Ltd",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/vaadin/hilla/issues"
  },
  "homepage": "https://hilla.dev",
  "files": [
    "*.{d.ts.map,d.ts,js.map,js}"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@vaadin/hilla-lit-form": "24.7.0-alpha3"
  },
  "peerDependencies": {
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/chai": "^5.0.1",
    "@types/chai-as-promised": "^8.0.1",
    "@types/chai-dom": "^1.11.3",
    "@types/mocha": "^10.0.10",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^4.0.0",
    "@types/validator": "^13.12.2",
    "chai": "^5.1.2",
    "@vitest/browser": "^3.0.0-beta.3",
    "@vitest/coverage-v8": "^3.0.0-beta.3",
    "@vitest/ui": "^3.0.0-beta.3",
    "chai-as-promised": "^8.0.1",
    "chai-dom": "^1.12.0",
    "playwright-core": "^1.49.1",
    "sinon": "^19.0.2",
    "sinon-chai": "^4.0.0",
    "typescript": "5.7.2",
    "vitest": "^3.0.0-beta.3"
  }
}
