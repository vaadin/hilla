{
  "name": "@vaadin/hilla-generator-cli",
  "version": "24.7.0-alpha3",
  "description": "A Hilla tool to generate TypeScript code from the OpenAPI document",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">= 16.13"
  },
  "scripts": {
    "clean:build": "git clean -fx . -e .vite -e node_modules",
    "build": "concurrently npm:build:*",
    "build:esbuild": "tsx ../../../scripts/build.ts",
    "build:dts": "tsc --isolatedModules -p tsconfig.build.json",
    "build:copy": "cd src && copyfiles **/*.d.ts ..",
    "lint": "eslint src test",
    "lint:fix": "eslint src test --fix",
    "test": "vitest --run",
    "test:coverage": "npm test -- --coverage",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vaadin/hilla.git",
    "directory": "packages/ts/generator-cli"
  },
  "keywords": [
    "hilla",
    "typescript",
    "generator"
  ],
  "author": "Vaadin Ltd.",
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/vaadin/hilla/issues"
  },
  "homepage": "https://hilla.dev",
  "files": [
    "*.{d.ts.map,d.ts,js.map,js}"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "tsgen": "bin/index.js"
  },
  "dependencies": {
    "@vaadin/hilla-generator-core": "24.7.0-alpha3",
    "@vaadin/hilla-generator-utils": "24.7.0-alpha3",
    "get-stdin": "^9.0.0",
    "meow": "^13.2.0"
  },
  "devDependencies": {
    "@types/chai": "^5.0.1",
    "@types/chai-as-promised": "^8.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.10",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^4.0.0",
    "@vaadin/hilla-generator-core": "24.7.0-alpha3",
    "@vitest/coverage-v8": "^3.0.0-beta.3",
    "c8": "^10.1.3",
    "chai": "^5.1.2",
    "chai-as-promised": "^8.0.1",
    "concurrently": "^9.1.0",
    "copyfiles": "^2.4.1",
    "mocha": "^11.0.1",
    "monocart-coverage-reports": "^2.11.5",
    "pino": "^9.5.0",
    "sinon": "^19.0.2",
    "sinon-chai": "^4.0.0",
    "type-fest": "^4.30.2",
    "vitest": "^3.0.2"
  }
}
